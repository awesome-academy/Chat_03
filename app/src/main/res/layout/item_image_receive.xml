<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_3">

    <ImageView
        android:id="@+id/image_message"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_230"
        android:layout_marginStart="@dimen/dp_8"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/image_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintBottom_toBottomOf="@+id/image_message"
        app:layout_constraintEnd_toEndOf="@+id/image_message"
        app:layout_constraintStart_toStartOf="@+id/image_message"
        app:layout_constraintTop_toTopOf="@+id/image_message" />

    <ImageView
        android:id="@+id/image_avatar"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
